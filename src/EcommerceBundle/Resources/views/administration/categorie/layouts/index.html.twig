{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Categorie</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Image</th>
				<th>Parent</th>
				<th>Libellé</th>
				<th>Produits</th>
				<th>Nbre de produits</th>
				<th>Créé le</th>
				<th>Modifié le</th>
				<th>Créé par</th>
				
				<th>Actions</th>
			</tr>
		<thead>
		<tbody>
			{% for entity in categories %}
				<tr>
					<td><a href="{{ path('categorieAdmin_show', {'id': entity.id }) }}"></a> {{ entity.id }}</td>
					<td>{% if asset('uploads/' ~ entity.image.path) %} <img src="{{ asset('uploads/' ~ entity.image.path) }}" class="img-responsive" />{% endif %} </td>
					<td>{{ entity.parent }}</td>
					<td>{{ entity.libelle }}</td>
					<td>
						<ul class="record_actions">
						{% for i in entity.produits %}
							<li>{{ i }}</li>
						{% endfor %}
						</ul>
					</td> 
					<td>{{ entity.produits|length }} </td>
					<td>{{ entity.creele|date }}</td>
					<td>{{ entity.modifiele|date }}</td>
					<td>{{ entity.creepar }}</td>
					
					<td>
						<ul class="inline_list">
							<li>
								<a href="{{ path('categorieAdmin_show', {'id':entity.id }) }}">
									<i class="icon-book"></i>
								<a>
							</li>
							<li>
								<a href="{{ path('categorieAdmin_edit', {'id':entity.id}) }}">
									<i class="icon-edit"></i>
								<a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
	<ul class="record_actions">
		<li>
			<a href="{{ path('categorieAdmin_new') }}">
				Ajouter une Catégorie
			<a>
		</li>
	</ul>


{% endblock %}
