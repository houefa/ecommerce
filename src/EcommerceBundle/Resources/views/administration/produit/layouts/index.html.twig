{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Produits</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Image</th>
				<th>Libell√©</th>
				<th>Description</th>
				<th>Prix </th>
				<th>disponible </th><th>Actions</th>
			</tr>
		<thead>
		<tbody>
			{% for entity in produits %}
				<tr>
					<td><a href="{{ path('produitAdmin_show', {'id': entity.id }) }}"></a> {{ entity.id }}</td>
					<td>{% if asset('uploads/' ~ entity.image.path) %} <img src="{{ asset('uploads/' ~ entity.image.path) }}" class="img_categorie_liste" />{% endif %} </td>
					<td>{{ entity.libelle }}</td>
					<td>{{ entity.description }}</td>
					<td>{{ entity.prix }}</td>
					<td>{{ entity.disponible }}</td>
					<td>
						<ul>
							<li>
								<a href="{{ path('produitAdmin_show', {'id':entity.id }) }}">
									<i class="icon-book"></i>
								<a>
							</li>
							<li>
								<a href="{{ path('produitAdmin_edit', {'id':entity.id}) }}">
									<i class="icon-edit"></i>
								<a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
	<ul class="record_actions">
		<li>
			<a href="{{ path('produitAdmin_new') }}">
				Ajouter un produit
			<a>
		</li>
	</ul>


{% endblock %}
