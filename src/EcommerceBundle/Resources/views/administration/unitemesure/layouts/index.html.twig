{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h3>Unités de mesure</h3>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				
				<th>Libellé</th>
				<th>Produits</th>
				<th>nbr de produits</th>
				<th>Créé le</th>
				<th>Modifié le</th>
				<th>Créé par</th>
				
				<th>Actions</th>
			</tr>
		<thead>
		<tbody>
			{% for entity in unitemesures %}
				<tr>
					 <td><a href="{{ path('categorieAdmin_show', {'id': entity.id }) }}"></a> {{ entity.id }}</td>
					
					<td>{{ entity.libelle }}</td>
					<td>
						<ul class="record_actions">
						{% for i in entity.produit %}
							<li>{{ i }}</li>
						{% endfor %}
						</ul>
					</td> 
					<td>{{ entity.produit|length }} </td>
					<td>{{ entity.creele|date }}</td>
					<td>{{ entity.modifiele|date }}</td>
					<td>{{ entity.creepar }}</td>
					
					<td>
						<ul class="inline_list">
							<li>
								<a href="{{ path('adminUnitemesure_show', {'id':entity.id }) }}">
									<i class="icon-book"></i>
								<a>
							</li>
							<li>
								<a href="{{ path('adminUnitemesure_edit', {'id':entity.id}) }}">
									<i class="icon-edit"></i>
								<a>
							</li>
						</ul>
					</td> 
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
	<ul class="record_actions">
		<li>
			<a href="{{ path('adminUnitemesure_new') }}">
				Ajouter une Unité de mesure
			<a>
		</li>
	</ul>


{% endblock %}
