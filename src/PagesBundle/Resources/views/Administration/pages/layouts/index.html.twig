{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Pages</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Titre</th>
				{# <th>Contenu</th> #}
				<th>Actions</th>
			</tr>
		<thead>
		<tbody>
			{% for entity in pages %}
				<tr>
					<td><a href="{{ path('adminPages_show', {'id': entity.id }) }}"></a> {{ entity.id }}</td>
					<td>{{ entity.titre }}</td>
					{# <td>{{ entity.contenu }}</td> #}
					<td>
						<ul>
							<li>
								<a href="{{ path('adminPages_show', {'id':entity.id }) }}">
									<i class="icon-book"></i>
								<a>
							</li>
							<li>
								<a href="{{ path('adminPages_edit', {'id':entity.id}) }}">
									<i class="icon-edit"></i>
								<a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
	<ul class="record_actions">
		<li>
			<a href="{{ path('adminPages_new') }}">
				Cr√©er une nouvelle page
			<a>
		</li>
	</ul>


{% endblock %}
