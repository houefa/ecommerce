{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Pages</h1>
	<table class="record_properties">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ page.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ page.titre }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ page.contenu }}</td>
			</tr>
		</tbody>
	</table>
	<ul class="record_actions">
		<li>
			<a href="{{ path('adminPages_index') }}">
				Retour
			<a>
		</li>
		<li>
			{{form(delete_form)}}
		</li>
	</ul>

{% endblock %}
