{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Liste des Utilisateurs</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>nom</th>
				<th>Statut</th>
				<th>Email</th>
				<th>Tel.</th>
				
				<th>Dernière connexion</th>
				<th>Actions</th>
			</tr>
		<thead>
		<tbody>
			{% for entity in utilisateurs %}

				<tr>
					<td>{{ entity.id }}</td>
					<td>{{ entity.username }}</td>
					<td>{{ entity.enabled }}</td>
					<td>{{ entity.email }}</td>
					<td></td>
					


					<td>{{ entity.lastLogin|date('d/m/Y h:i:s') }}</td>
					
					<td>
						<ul>
							{% if entity.adresses|length != 0 %}
								<li>
									<a href="{{ path('utilisateurAdminAdresses', {'id':entity.id }) }}" title="Consulter les adresses" >
										<i class="icon-book"></i>
									<a>
								</li>
							{% endif %}
							{% if entity.commandes|length != 0 %}
							<li>
								<a href="{{ path('utilisateurAdminFactures', {'id':entity.id}) }}" title="Consulter les factures">
									<i class="icon-book"></i>
								<a>
							</li>
							{% endif %}
						</ul>
					</td>
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
	{# <ul class="record_actions">
		<li>
			<a href="{{ path('utilisateurAdmin_new') }}">
				Ajouter une Catégorie
			<a>
		</li>
	</ul> #}


{% endblock %}
