{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
	<h1>Utilisateur Factures</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Référence</th>
				<th>Date</th>
				<th>Produits</th>
				<th>PrixTTC</th>
				<th></th>
				
			</tr>
		<thead>
		<tbody>
			{% if utilisateur.commandes|length == 0 %}
				
				<tr><td><center>Aucune facture actuellement.</center></td></tr>

			{% endif %}
			{% for entity in utilisateur.commandes %}
				{# {{ dump(entity) }}  #}
				<tr>
					<td>{{ entity.reference}}</td>
					<td>{{ entity.datec|date('d/m/Y h:i:s')  }}</td>
					<td>
						<ul>
						{% for p in entity.produits.produit %}
							
							<li>
								{# {{ dump(p) }}   #}
								{{ p.reference }} => {{ p.quantite }}
							</li>
							{% else %}
								<li>
									Aucun produit
									{# {{ p.libelle }} #}
									{# {{ p.produit }} - {{ p.totalTTC }} #}
								</li>

							
						{% endfor %}
						</ul> 
					</td>
					<td>{{ entity.produits.totalTTC }} </td>
					<td><a href="" target="_blank" ><i class="icon-update" ></i></a> </td>
					
				</tr>
			{% endfor %}
			
			
		</tbody>
	</table>
{% endblock %}